# hstr (hh) configuration for zsh
# Add this to your ~/.zshrc or source this file

# Bind hstr to Ctrl+r
export HSTR_CONFIG=hicolor,raw-history-view
bindkey -s "\C-r" "\C-a hstr -- \C-j"

# Use hstr for history navigation
export HSTR_CONFIG=hicolor,raw-history-view,keywords,blacklist,regexp,favorites,bookmarks,duplicates,case-sensitive

# Alternative: Use hh alias
alias hh=hstr

# If hstr is installed, configure it
if command -v hstr &> /dev/null; then
    # Set hstr configuration file location
    export HSTR_CONFIG=hicolor,raw-history-view
    
    # Bind Ctrl+r to hstr
    bindkey -s "\C-r" "\C-a hstr -- \C-j"
    
    # Use hstr for history navigation
    export HSTR_CONFIG=hicolor,raw-history-view,keywords,blacklist,regexp,favorites,bookmarks,duplicates,case-sensitive
fi
